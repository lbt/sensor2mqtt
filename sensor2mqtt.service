[Unit]
Description=Temperature Broadcast
After=network.target
StartLimitBurst=1
StartLimitIntervalSec=10

[Service]
WorkingDirectory=/home/pi/
ExecStart=/home/pi/venv-mqtt/bin/python3 /home/pi/heating/sensor2mqtt/sensor2mqtt/MQTTBroadcast.py
KillMode=mixed
Restart=on-failure
RestartPreventExitStatus=255
TimeoutStopSec=5

[Install]
WantedBy=default.target
